{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@tend/shared/types": ["libs/shared/types/src/index.ts"],
      "@tend/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@tend/shared/constants": ["libs/shared/constants/src/index.ts"],
      "@tend/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "infra"]
}
